<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clearbladeandroidtest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.clearbladeandroidtest.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.clearbladeandroidtest.CollectionActivity"
            android:label="@string/title_activity_collection" >
        </activity>
        <activity
            android:name="com.example.clearbladeandroidtest.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.example.clearbladeandroidtest.QueryActivity"
            android:label="@string/title_activity_query" >
        </activity>
        <activity
            android:name="com.example.clearbladeandroidtest.CreateItemActivity"
            android:label="@string/title_activity_create_item" >
        </activity>
        <activity
            android:name="com.example.clearbladeandroidtest.UpdateActivity"
            android:label="@string/title_activity_update" >
        </activity>
        <activity
            android:name="com.example.clearbladeandroidtest.DeleteActivity"
            android:label="@string/title_activity_delete" >
        </activity>
        <activity
            android:name="com.example.clearbladeandroidtest.MessagingActivity"
            android:label="@string/title_activity_messaging" >
        </activity>
        
        <service
		  android:name="com.clearblade.platform.api.internal.MessageService"
		  android:icon="@drawable/ic_launcher"
		  android:label="@string/message_service"
		  >
		</service> 
		
    </application>

</manifest>
